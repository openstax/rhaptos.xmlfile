<div lang="en"
     xml:lang="en"
     xmlns="http://www.w3.org/1999/xhtml"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     i18n:domain="rhaptos.xmlfile"
     tal:attributes="class view/klass;
                     style view/style;
                     title view/title;
                     lang view/lang;
                     onclick view/onclick;
                     ondblclick view/ondblclick;
                     onmousedown view/onmousedown;
                     onmouseup view/onmouseup;
                     onmouseover view/onmouseover;
                     onmousemove view/onmousemove;
                     onmouseout view/onmouseout;
                     onkeypress view/onkeypress;
                     onkeydown view/onkeydown;
                     onkeyup view/onkeyup">

    <tal:define define="fieldName view/name;
                        mimeType view/value/mimeType | view/field/default_mime_type;">
    <div class="fieldTextFormat">
        <label i18n:translate="label_text_format">XML Format</label>

        <input type="text" tal:attributes="id string:${fieldName}_text_format;
                                           name string:${fieldName}.mimeType;
                                           value mimeType"/>
    </div>
    </tal:define>

    <tal:editor define="context            view/wrapped_context;
                        here               nocall:context;
                        portal_url         nocall:context/portal_url;
                        portal             portal_url/getPortalObject;
                        inputname          view/name;
                        inputvalue         view/value/raw | nothing;
                        here_url           request/getURL;
                        tabindex           nothing;
                        rows               python:view.rows or 25;
                        cols               python:view.cols or 80;
                        title              view/title">
        <div metal:use-macro="context/@@xml_wysiwyg_support/wysiwygEditorBox">
            The WYSIWYG code
        </div>
    </tal:editor>
  
</div>
